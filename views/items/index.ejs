<%- include('../partials/header.ejs') %>

<main class="container">
    <h1 class="fw-bold text-center mt-5">Our Cardigan Collection</h1>

    <!-- Show search query if applicable -->
    <% if (searchTerm) { %>
        <h5 class="text-muted text-center">Search results for: "<%= searchTerm %>"</h5>
    <% } %>

    <!-- No items found message -->
    <% if (cardigans.length === 0) { %>
        <div class="alert alert-warning text-center">
            No items found matching "<%= searchTerm %>". Try another search.
        </div>
    <% } else { %>
        <div class="items-container">
            <% cardigans.sort((a, b) => a.price - b.price); %>
            <% cardigans.forEach(item => { %>
                <div class="card">
                    <a href="/items/<%= item.id %>" class="card-link">
                        <img src="<%= item.image %>" alt="<%= item.title %>" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title"><%= item.title %></h5>
                            <p class="card-text"><strong>$<%= item.price %></strong></p>
                            <p class="card-text"><strong><%= item.condition %></strong></p>
                        </div>
                    </a>
                </div>
            <% }); %>
        </div>
    <% } %>
</main>

<%- include('../partials/footer.ejs') %>
